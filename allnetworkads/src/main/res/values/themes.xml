<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PauseDialog" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/translate_bottom_to_top</item>
        <item name="android:windowExitAnimation">@anim/translate_top_to_bottom</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#5F5E5E</item>
        <item name="colorControlActivated">#FFC107</item>
    </style>
</resources>